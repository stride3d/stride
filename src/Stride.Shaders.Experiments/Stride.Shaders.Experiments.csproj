<Project Sdk="Microsoft.NET.Sdk">

  

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Stride.Shaders.Compilers\Stride.Shaders.Compilers.csproj" />
    <Reference Include="Stride.Core" Condition="'$(StrideDirectory)' != ''">
      <HintPath>$(StrideDirectory)\sources\core\Stride.Core\bin\Debug\net10.0\Stride.Core.dll</HintPath>
    </Reference>
    <Reference Include="Stride.Shaders" Condition="'$(StrideDirectory)' != ''">
      <HintPath>$(StrideDirectory)\sources\engine\Stride.Shaders\bin\Debug\net10.0\Stride.Shaders.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\assets\**" CopyToOutputDirectory="PreserveNewest" LinkBase="assets\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Stride.Shaders.Generators\Intrinsics\IntrinAST.cs" />
    <Compile Include="..\Stride.Shaders.Generators\Intrinsics\Parser.cs" />
  </ItemGroup>

</Project>
