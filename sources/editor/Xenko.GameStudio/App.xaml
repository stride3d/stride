<Application x:Class="Xenko.GameStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Theme.AvalonDock.xaml"/>
        <ResourceDictionary Source="/Xenko.Core.Assets.Editor;component/View/CommonResources.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <BitmapImage x:Key="EditorIcon" UriSource="Resources/EditorIcon.png" />

      <DrawingImage x:Key="VectorEditorIcon">
        <DrawingImage.Drawing>
          <DrawingGroup>
            <DrawingGroup.Transform>
              <ScaleTransform ScaleX="1" ScaleY="0.9" />
            </DrawingGroup.Transform>
            <GeometryDrawing Brush="#C7C7C7" Geometry="F1 M0,6.5 L 1.5,6.5 3,4.5 6,4.5 7.5,6.5 9,6.5 7,3.5 2,3.5z M0,0 L 1.5,0 3,2 6,2 7.5,0 9,0 7,3 2,3z " />
          </DrawingGroup>
        </DrawingImage.Drawing>
      </DrawingImage>

    </ResourceDictionary>
  </Application.Resources>
</Application>
