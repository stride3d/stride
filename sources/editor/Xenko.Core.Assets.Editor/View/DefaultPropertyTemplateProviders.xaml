    <pvdr:EnumTemplateProvider.OverriddenProviderNames>
      <s:String>Enum</s:String>
    </pvdr:EnumTemplateProvider.OverriddenProviderNames>
    <DataTemplate DataType="qvm:NodeViewModel">
      <Grid>
