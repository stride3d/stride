  <SolidColorBrush x:Key="ComboToggleButtonHoverBackground" Color="White" />

  <SolidColorBrush x:Key="ToggleButtonHoverBackground" Color="#FFAAAAAA"/>

  <SolidColorBrush x:Key="ToolBarToggleButtonHoverBackground" Color="#FFC9DEF5"/>
  <SolidColorBrush x:Key="ToolBarToggleButtonPressedBackground" Color="#0082D9"/>

  <SolidColorBrush x:Key="DefaultedBorderBrush" Color="{StaticResource DefaultColor}" />
  <SolidColorBrush x:Key="SolidBorderBrush" Color="#CCCEDB" />
