  <SolidColorBrush x:Key="MainWindowInactiveBorderBrush" Color="#CCCEDB"/>
  <SolidColorBrush x:Key="MainWindowInactiveCaptionTextBrush" Color="#99525252"/>
  <SolidColorBrush x:Key="ScrollBarBrush" Color="#F5F5F5"/>
  <SolidColorBrush x:Key="ScrollBarArrowBackgroundBrush" Color="#F5F5F5"/>
  <SolidColorBrush x:Key="ScrollBarArrowGlyphBrush" Color="#868999"/>
  <SolidColorBrush x:Key="ScrollBarThumbBackgroundBrush" Color="#C2C3C9"/>
  <SolidColorBrush x:Key="ScrollBarThumbDisabledBrush" Color="#F5F5F5"/>
  <SolidColorBrush x:Key="ScrollBarThumbMouseOverBackgroundBrush" Color="#686868"/>
  <SolidColorBrush x:Key="ScrollBarThumbPressedBackgroundBrush" Color="#5B5B5B"/>

</ResourceDictionary>
