                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    x:Class="Stride.Core.Presentation.Themes.Overrides.LightSteelBlueTheme"
                    mc:Ignorable="d">
  <!-- Main Colors -->

  <Color x:Key="MainColor">#FF939393</Color>
  <Color x:Key="HoverColor">#FFAAAAAA</Color>
  <Color x:Key="DefaultColor">#FF9BB1C5</Color>
  <SolidColorBrush x:Key="DropdownButtonBackgroundBrush" Color="#F5F5F5" />
