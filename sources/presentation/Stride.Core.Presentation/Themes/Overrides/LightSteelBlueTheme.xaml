  <SolidColorBrush x:Key="CheckBoxBorderFocusBrush" Color="#FFE5E5E5"/>
  <SolidColorBrush x:Key="HoverTextBorderBrush" Color="#FF6A6A6A"/>

  <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F2F2F2"/>
  <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF545456" />
  <SolidColorBrush x:Key="ButtonNormalBackground" Color="#F7F7FA"/>

  <SolidColorBrush x:Key="NormalTextBorderBrush" Color="#FFCCCEDB"/>

  <SolidColorBrush x:Key="ToolBarButtonHover" Color="{StaticResource MainColor}" />
  <SolidColorBrush x:Key="MenuBorderBrush" Color="#D0D3D6"/>

  <SolidColorBrush x:Key="ListBorder" Color="#828790" />
  <SolidColorBrush x:Key="ToolBarGripper" Color="#3A3A3A"/>
