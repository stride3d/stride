<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\targets\Stride.UnitTests.props" />
  <PropertyGroup>
    <TargetFramework>$(StrideEditorTargetFramework)</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <StrideBuildTags>*</StrideBuildTags>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <StrideEnableTestLauncher>false</StrideEnableTestLauncher>

    <!-- Force msbuild to check to rebuild so that unit tests SDSL files are properly copied -->
    <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
    <RootNamespace>Stride.Shaders.Parsers.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.HighPerformance" />
    <PackageReference Include="coverlet.collector">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="Silk.NET.Input" />
    <PackageReference Include="Silk.NET.Vulkan" />
    <PackageReference Include="Silk.NET.Windowing.Sdl" />
    <PackageReference Include="SixLabors.ImageSharp" />
    <PackageReference Include="xunit.runner.visualstudio" />
    <PackageReference Include="xunit.v3" />
    <ProjectReference Include="..\..\engine\Stride.Graphics\Stride.Graphics.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
    <AdditionalFiles Include="..\assets\SDSL\RenderTests\**" CopyToOutputDirectory="PreserveNewest" LinkBase="assets\SDSL\RenderTests\" />
    <None Include="..\assets\**" CopyToOutputDirectory="PreserveNewest" LinkBase="assets\" Exclude="..\assets\SDSL\RenderTests\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Stride.Shaders.Compilers\Stride.Shaders.Compilers.csproj" />
    <ProjectReference Include="..\Stride.Shaders.Parsers\Stride.Shaders.Parsers.csproj" />
  </ItemGroup>
  <Import Project="..\..\targets\Stride.UnitTests.targets" />
</Project>
