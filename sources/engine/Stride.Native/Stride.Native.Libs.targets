<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    We need both StrideNativePathLibs and StrideNativePathLibs2 as in Windows platforms it's a simple string while on other platforms they need to be iterated and processed
  -->
  <PropertyGroup>
    <StrideNativePathLibs Condition="'$(StridePlatform)' == 'Windows'">libCompilerRt.lib libCelt.lib Recast.lib Detour.lib</StrideNativePathLibs>
    <StrideNativePathLibs Condition="'$(StridePlatform)' == 'UWP'">libCompilerRt.lib libCelt.lib Xaudio2.lib Recast.lib Detour.lib</StrideNativePathLibs>
  </PropertyGroup>

  <ItemGroup>
    <StrideNativePathLibs2 Condition="'$(StridePlatform)' == 'iOS' or $(StridePlatforms.Contains('macOS'))" Include="$(MSBuildThisFileDirectory)..\..\..\deps\NativePath\iOS\libCelt.a;$(MSBuildThisFileDirectory)..\..\..\deps\NativePath\iOS\libDetour.a;$(MSBuildThisFileDirectory)..\..\..\deps\NativePath\iOS\libRecast.a" />
    <StrideNativePathLibs2 Condition="$(StridePlatforms.Contains('Linux')) Or '$(StridePlatform)' == 'Android'" Include="libCelt.a;libCompilerRt.a;libDetour.a;libRecast.a" />
  </ItemGroup>
</Project>
