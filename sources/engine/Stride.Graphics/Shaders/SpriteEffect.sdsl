shader SpriteEffect : SpriteBase
{
    // Color used to tint the sprite
    [Color]
    stage float4 Color = float4(1,1,1,1);

    // Shading of the sprite
    stage override float4 Shading()
    {
        return base.Shading() * Color;
    }
};
